        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VentanaEdicion" Height="273.53" Width="198.53">
    <Grid>
        <Calendar x:Name="calendar" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top" Width="146" Height="171" FirstDayOfWeek="Monday"/>
        <TextBox x:Name="tbHora" HorizontalAlignment="Left" Height="23" Margin="10,182,0,0" TextWrapping="Wrap" Text="HH" VerticalAlignment="Top" Width="36"/>
        <TextBox x:Name="tbMin" HorizontalAlignment="Left" Height="23" Margin="69,182,0,0" TextWrapping="Wrap" Text="MM" VerticalAlignment="Top" Width="36"/>
        <Label Content=":" HorizontalAlignment="Left" Margin="51,179,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btGuardar" Content="Guardar" HorizontalAlignment="Left" Margin="10,210,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.101,-0.421" Click="btGuardar_Click"/>

    </Grid>
</Window>
