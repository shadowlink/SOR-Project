<UserControl x:Class="GaleriaArte.HistorialVentas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="430" Width="899">
    <Grid Background="White">
        <Label Content="Histórico de Ventas" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <ListView x:Name="lvHistorico" Height="373" Margin="15,52,20,5">
            <ListView.View>
                <GridView>
                    <GridViewColumn x:Name="colId" Header="id" HeaderStringFormat="id" Width="80"/>
                    <GridViewColumn x:Name="colTipo" Header="Tipo" HeaderStringFormat="Tipo" Width="200"/>
                    <GridViewColumn x:Name="colEstado" Header="Estado" HeaderStringFormat="Estado" Width="200"/>
                    <GridViewColumn x:Name="colPrecio" Header="Precio Venta" HeaderStringFormat="Precio Venta" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
